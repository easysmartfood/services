<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.esf.service.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/easysmartfoodservice/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>getRestaurant</servlet-name>
    <servlet-class>com.esf.service.server.GetRestaurant</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>getRestaurant</servlet-name>
    <url-pattern>/restaurant</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>getFoodItems</servlet-name>
    <servlet-class>com.esf.service.server.GetFoodItems</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>getFoodItems</servlet-name>
    <url-pattern>/fooditems/restaurant</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>insertOrder</servlet-name>
    <servlet-class>com.esf.service.server.InsertOrder</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>insertOrder</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>
  

  

  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>EasySmartFoodService.html</welcome-file>
  </welcome-file-list>

</web-app>
